{{outlet}}

<table class="table table-hover">
  <tr>
    <th>Hop</th>
  </tr>
  {{#each}}
    <tr>
      <td>
        <a href="#" tabindex="0" class="btn btn-primary" data-toggle="popover" data-trigger="hover" title="{{unbound name}}" data-content="{{unbound aroma}}">
          {{name}}
        </a>
      </td>
    </tr>
  {{/each}}
</table>

<script type="text/javascript">
  $(document).ready(function(){
    $("[data-toggle='popover']").popover();
  });
</script>
